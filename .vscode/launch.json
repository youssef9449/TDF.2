{
    "version": "0.2.0",
    "configurations": [

        {
            "name": ".NET MAUI Launch",
            "type": "maui",
            "request": "launch",
            "project": "${workspaceFolder}/TDFMAUI/TDFMAUI.csproj",
            "preLaunchTask": "maui: build",
            "targetFramework": "net8.0-android"
            // should prompt you to select from available devices/emulators.
        },
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/dotnet/vscode-csharp/blob/main/debugger-launchjson.md.
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-tdfapi",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/TDFAPI/bin/Debug/net8.0/TDFAPI.dll",
            "args": [],
            "cwd": "${workspaceFolder}/TDFAPI",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "logging": {
                "moduleLoad": false
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            // Configuration for debugging TDFMAUI on Android emulator
            "name": "Debug Android Emulator",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/TDFMAUI/TDFMAUI.csproj",
                "-t:Run",
                "-f:net8.0-android",
                "--no-restore"
            ],
            "cwd": "${workspaceFolder}/TDFMAUI",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            // Configuration for debugging TDFMAUI on Windows
            "name": "Debug Windows",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/TDFMAUI/TDFMAUI.csproj",
                "-t:Run",
                "-f:net8.0-windows10.0.19041.0",
                "--no-restore"
            ],
            "cwd": "${workspaceFolder}/TDFMAUI",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}