{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Server=192.168.100.3;Database=Users;Trusted_Connection=True;TrustServerCertificate=True;"
    },
  "Jwt": {
    "TokenValidityInMinutes": 60,
    "RefreshTokenValidityInDays": 7,
    "Issuer": "tdfapi",
    "Audience": "tdfapp"
  },
  "AllowedOrigins": [
    "https://yourproductionapp.com",
    "https://admin.yourproductionapp.com"
  ],
  "DevelopmentAllowedOrigins": [
    "http://localhost:3000",
    "http://localhost:8080",
    "http://localhost:4200",
    "http://localhost:5173"
  ],
  "Security": {
    "MaxFailedLoginAttempts": 5,
    "LockoutDurationMinutes": 15,
    "PasswordRequirements": {
      "MinimumLength": 12,
      "RequireUppercase": true,
      "RequireLowercase": true,
      "RequireDigit": true,
      "RequireSpecialCharacter": true
    }
  },
  "WebSockets": {
    "TimeoutMinutes": 30,
    "KeepAliveMinutes": 2,
    "MaxMessagesPerMinute": 120,
    "ReceiveBufferSize": 65536
  }
}
