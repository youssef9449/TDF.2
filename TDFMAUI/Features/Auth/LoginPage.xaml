<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:TDFMAUI.Helpers"
             xmlns:vm="clr-namespace:TDFMAUI.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="TDFMAUI.Features.Auth.LoginPage"
             x:DataType="vm:LoginPageViewModel"
             Title="Login"
             BackgroundColor="White">

    <ContentPage.Resources>
        <Style x:Key="EntryStyle" TargetType="Entry">
            <Setter Property="TextColor">
                <AppThemeBinding Light="Black" Dark="Black" />
            </Setter>
            <Setter Property="BackgroundColor" Value="#F5F5F7" />
            <Setter Property="PlaceholderColor" Value="#999999" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="HeightRequest" Value="40" />
            <Setter Property="ReturnCommand" Value="{Binding LoginCommand}" />
            <Setter Property="ClearButtonVisibility" Value="WhileEditing" />
            <Setter Property="IsEnabled" Value="{Binding IsNotBusy}" />
        </Style>
    </ContentPage.Resources>

    <!-- Main grid with fixed height to fit 720px -->
    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="0" MaximumHeightRequest="720" MaximumWidthRequest="1280">
        <!-- Top safe area padding - minimal -->
        <BoxView Grid.Row="0" BackgroundColor="White" HeightRequest="0" />

        <!-- Main content - No ScrollView to ensure everything fits -->
        <Grid Grid.Row="1" VerticalOptions="FillAndExpand">
            <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,Auto,*" Margin="0,5,0,0">
                <!-- Left column spacer -->
                <BoxView Grid.Column="0" Grid.RowSpan="3" />
                
                <!-- Logo and title - reduced size -->
                <StackLayout Grid.Column="1" Grid.Row="0" Spacing="5" Margin="0,10,0,5" HorizontalOptions="Center">
                    <Image x:Name="LogoImage" Source="tdf_logo.png" HeightRequest="150" HorizontalOptions="Center" Aspect="AspectFit">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDiagnosticsClicked" NumberOfTapsRequired="3" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Label Text="Welcome back, please sign in" FontSize="16" TextColor="#666666" HorizontalOptions="Center"/>
                </StackLayout>
                
                <!-- Login form - compact layout -->
                <Frame Grid.Column="1" Grid.Row="1" BorderColor="Transparent" BackgroundColor="Transparent" 
                       Padding="0" HasShadow="False" WidthRequest="380" VerticalOptions="Start" Margin="0,5,0,0">
                    <VerticalStackLayout Spacing="10">
                        <!-- Username input -->
                        <Frame CornerRadius="10" Padding="0" BackgroundColor="#F5F5F7" HasShadow="False" BorderColor="Transparent" HeightRequest="45">
                            <Entry Style="{StaticResource EntryStyle}"
                                   Placeholder="User Name"
                                   Text="{Binding Username}"
                                   Keyboard="Text"
                                   Margin="15,0" />
                        </Frame>

                        <!-- Password input -->
                        <Frame CornerRadius="10" Padding="0" BackgroundColor="#F5F5F7" HasShadow="False" BorderColor="Transparent" HeightRequest="45">
                            <Entry Style="{StaticResource EntryStyle}"
                                   Placeholder="Password"
                                   IsPassword="True"
                                   Text="{Binding Password}"
                                   Margin="15,0" />
                        </Frame>

                        <!-- Error message -->
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="#FF3B30"
                               IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                               HorizontalOptions="Start"
                               FontSize="14"
                               Margin="5,0,0,0"
                               HeightRequest="20"/>

                        <!-- Login button - using platform-specific styling -->
                        <Button Text="Sign In"
                                Command="{Binding LoginCommand}"
                                TextColor="White"
                                FontAttributes="Bold"
                                FontSize="16"
                                CornerRadius="{OnPlatform iOS=25, MacCatalyst=25, Default=10}"
                                HeightRequest="45"
                                Margin="0,10,0,0">
                            <Button.BackgroundColor>
                                <OnPlatform x:TypeArguments="Color">
                                    <On Platform="iOS, MacCatalyst" Value="#007AFF" />
                                    <On Platform="Android" Value="#1a73e8" />
                                    <On Platform="WinUI" Value="#0078d4" />
                                </OnPlatform>
                            </Button.BackgroundColor>
                        </Button>

                        <!-- Forgot password with real functionality -->
                        <Label Text="Forgot Password?"
                               HorizontalOptions="Center"
                               FontSize="15"
                               Margin="0,5,0,0">
                            <Label.TextColor>
                                <OnPlatform x:TypeArguments="Color">
                                    <On Platform="iOS, MacCatalyst" Value="#007AFF" />
                                    <On Platform="Android" Value="#1a73e8" />
                                    <On Platform="WinUI" Value="#0078d4" />
                                </OnPlatform>
                            </Label.TextColor>
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnForgotPasswordClicked" />
                            </Label.GestureRecognizers>
                        </Label>
                    </VerticalStackLayout>
                </Frame>
                
                <!-- Right column spacer -->
                <BoxView Grid.Column="2" Grid.RowSpan="3" />
            </Grid>
        </Grid>

        <!-- Sign up section at bottom - reduced padding -->
        <VerticalStackLayout Grid.Row="2" BackgroundColor="White" Padding="0,5,0,10">
            <BoxView HeightRequest="1" BackgroundColor="#E5E5EA" Margin="0,0,0,5" />
            <Label Text="Don't have an account? Sign Up"
                   HorizontalOptions="Center"
                   FontSize="16">
                <Label.TextColor>
                    <OnPlatform x:TypeArguments="Color">
                        <On Platform="iOS, MacCatalyst" Value="#007AFF" />
                        <On Platform="Android" Value="#1a73e8" />
                        <On Platform="WinUI" Value="#0078d4" />
                    </OnPlatform>
                </Label.TextColor>
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSignupClicked"/>
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>
    </Grid>
</ContentPage>