<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TDFMAUI.Features.Auth"
             xmlns:converters="clr-namespace:TDFMAUI.Converters"
             xmlns:helpers="clr-namespace:TDFMAUI.Helpers"
             x:Class="TDFMAUI.Features.Auth.SignupPage"
             x:DataType="{x:Null}"
             Title="Sign Up"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#121212}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ValidationStateToColorConverter x:Key="ValidationStateToColorConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            
            <!-- Add styles for Entry and Picker -->
            <Style x:Key="EntryStyle" TargetType="Entry">
                <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark=#333333}" />
                <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light=#757575, Dark=#AAAAAA}" />
                <Setter Property="FontSize" Value="16" />
            </Style>
            
            <Style x:Key="PickerStyle" TargetType="Picker">
                <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark=#333333}" />
                <Setter Property="TitleColor" Value="{AppThemeBinding Light=#757575, Dark=#AAAAAA}" />
                <Setter Property="FontSize" Value="16" />
            </Style>
            
            <Style x:Key="FrameStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark=#333333}" />
                <Setter Property="BorderColor" Value="{AppThemeBinding Light=#E0E0E0, Dark=#555555}" />
                <Setter Property="Padding" Value="10" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="HasShadow" Value="False" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <ScrollView HorizontalOptions="FillAndExpand">
            <Grid HorizontalOptions="{OnIdiom Phone=Fill, Default=Center}"
                  Margin="{OnIdiom Phone=0, Default=10}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{OnIdiom Phone=*, Default=Auto}"/>
                </Grid.ColumnDefinitions>
                <VerticalStackLayout Spacing="{OnIdiom Phone=15, Default=20}" 
                               Padding="{OnIdiom Phone='15,15,15,30', Default=20}" 
                               WidthRequest="{OnIdiom Phone=Auto, Default=500}"
                               HorizontalOptions="{OnIdiom Phone=Fill, Default=Center}"
                               MaximumWidthRequest="{OnIdiom Phone=600, Default=900}">
                    <!-- Header -->
                    <Label Text="Create Account"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=Black, Dark=White}"
                           HorizontalOptions="Center"
                           Margin="0,10,0,20"/>

                    <!-- Form Fields -->
                    <VerticalStackLayout Spacing="15">
                        <!-- Username -->
                        <VerticalStackLayout>
                            <Label Text="Username" FontSize="16" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                            <Frame Style="{StaticResource FrameStyle}"
                                   BorderColor="{Binding HasError, Converter={StaticResource ValidationStateToColorConverter}}">
                                <Entry Text="{Binding Username}"
                                       Style="{StaticResource EntryStyle}"
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}"
                                       Placeholder="Enter username"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Full Name -->
                        <VerticalStackLayout>
                            <Label Text="Full Name" FontSize="16" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                            <Frame Style="{StaticResource FrameStyle}"
                                   BorderColor="{Binding HasError, Converter={StaticResource ValidationStateToColorConverter}}">
                                <Entry Text="{Binding FullName}"
                                       Style="{StaticResource EntryStyle}"
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}"
                                       Placeholder="Enter full name"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Password -->
                        <VerticalStackLayout>
                            <Label Text="Password" FontSize="16" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                            <Frame Style="{StaticResource FrameStyle}"
                                   BorderColor="{Binding HasError, Converter={StaticResource ValidationStateToColorConverter}}">
                                <Entry Text="{Binding Password}"
                                       Style="{StaticResource EntryStyle}"
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}"
                                       Placeholder="Enter password"
                                       IsPassword="True"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Confirm Password -->
                        <VerticalStackLayout>
                            <Label Text="Confirm Password" FontSize="16" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                            <Frame Style="{StaticResource FrameStyle}"
                                   BorderColor="{Binding HasError, Converter={StaticResource ValidationStateToColorConverter}}">
                                <Entry Text="{Binding ConfirmPassword}"
                                       Style="{StaticResource EntryStyle}"
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}"
                                       Placeholder="Confirm password"
                                       IsPassword="True"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Department -->
                        <VerticalStackLayout>
                            <Label Text="Department" FontSize="16" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                            <Frame Style="{StaticResource FrameStyle}"
                                   BorderColor="{Binding HasError, Converter={StaticResource ValidationStateToColorConverter}}"
                                   HorizontalOptions="Fill">
                                <Picker Title="Select Department"
                                        Style="{StaticResource PickerStyle}"
                                        TextColor="{AppThemeBinding Light=Black, Dark=White}"
                                        BackgroundColor="{AppThemeBinding Light=White, Dark=#333333}"
                                        TitleColor="{AppThemeBinding Light=#757575, Dark=#AAAAAA}"
                                        ItemsSource="{Binding Departments}"
                                        SelectedItem="{Binding SelectedDepartment}"
                                        ItemDisplayBinding="{Binding Name}"
                                        HeightRequest="70"
                                        HorizontalOptions="Fill"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Title -->
                        <VerticalStackLayout>
                            <Label Text="Title" FontSize="16" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                            <Frame Style="{StaticResource FrameStyle}"
                                   BorderColor="{Binding HasError, Converter={StaticResource ValidationStateToColorConverter}}"
                                   HorizontalOptions="Fill">
                                <Picker Title="Select Title"
                                        Style="{StaticResource PickerStyle}"
                                        TextColor="{AppThemeBinding Light=Black, Dark=White}"
                                        BackgroundColor="{AppThemeBinding Light=White, Dark=#333333}"
                                        TitleColor="{AppThemeBinding Light=#757575, Dark=#AAAAAA}"
                                        ItemsSource="{Binding Titles}"
                                        SelectedItem="{Binding SelectedTitle}"
                                        HeightRequest="70"
                                        HorizontalOptions="Fill"/>
                            </Frame>
                        </VerticalStackLayout>
                    </VerticalStackLayout>

                    <!-- Error Message -->
                    <Frame IsVisible="{Binding HasError}"
                           BackgroundColor="#FFEBEE"
                           BorderColor="#EF5350"
                           Padding="10"
                           CornerRadius="8"
                           Margin="0,10,0,0">
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="#B71C1C"
                               FontSize="14"
                               HorizontalOptions="Center"/>
                    </Frame>

                    <!-- Sign Up Button -->
                    <Button Text="Sign Up"
                            Command="{Binding SignupCommand}"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            FontSize="16"
                            HeightRequest="50"
                            CornerRadius="25"
                            Margin="0,20,0,0"/>

                    <!-- Login Link -->
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                        <Label Text="Already have an account?"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#444444, Dark=#BBBBBB}"/>
                        <Label Text="Login"
                               FontSize="14"
                               TextColor="#2196F3">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GoToLoginCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>