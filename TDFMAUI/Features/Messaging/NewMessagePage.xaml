<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDFMAUI.Pages.NewMessagePage"
             Title="New Message"
             BackgroundColor="{StaticResource Gray100}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
             <!-- Constrain width on Desktop/Tablet -->
            <VerticalStackLayout.MaximumWidthRequest>
                <OnIdiom x:TypeArguments="x:Double" Phone="10000" Tablet="800" Desktop="700" />
            </VerticalStackLayout.MaximumWidthRequest>
            <VerticalStackLayout.HorizontalOptions>
                 <OnIdiom Default="Fill" Phone="Fill" Tablet="Center" Desktop="Center" />
            </VerticalStackLayout.HorizontalOptions>

            <!-- Header -->
            <Grid ColumnDefinitions="Auto,*,Auto">
                <Button Grid.Column="0" 
                        Text="â† Back" 
                        Clicked="OnBackClicked"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Primary}"
                        FontAttributes="Bold"/>
                <Label Grid.Column="1" 
                       Text="New Message" 
                       FontSize="24"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Grid>

            <!-- Message Form -->
            <Frame Padding="20" 
                   BorderColor="{StaticResource Gray300}"
                   BackgroundColor="White"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="15">
                    <!-- Recipient -->
                    <Label Text="To:" 
                           FontAttributes="Bold"/>
                    <Picker x:Name="recipientPicker"
                            Title="Select recipient"
                            ItemDisplayBinding="{Binding FullName}"/>

                    <!-- Subject -->
                    <Label Text="Subject:" 
                           FontAttributes="Bold"/>
                    <Entry x:Name="subjectEntry"
                           Placeholder="Enter subject"/>

                    <!-- Message Content -->
                    <Label Text="Message:" 
                           FontAttributes="Bold"/>
                    <Editor x:Name="contentEditor"
                            Placeholder="Enter your message"
                            HeightRequest="200"
                            AutoSize="TextChanges"/>

                    <!-- Send Button -->
                    <Button Text="Send Message"
                            Clicked="OnSendClicked"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            CornerRadius="25"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

    <!-- Loading Indicator -->
    <ActivityIndicator x:Name="loadingIndicator"
                      IsRunning="False"
                      IsVisible="False"
                      HorizontalOptions="Center"
                      VerticalOptions="Center"/>
</ContentPage> 