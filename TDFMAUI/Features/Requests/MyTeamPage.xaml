<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TDFMAUI.ViewModels"
             xmlns:helpers="clr-namespace:TDFMAUI.Helpers"
             xmlns:models="clr-namespace:TDFShared.Models.User;assembly=TDFShared"
             xmlns:dtos="clr-namespace:TDFShared.DTOs.Users;assembly=TDFShared"
             xmlns:converters="clr-namespace:TDFMAUI.Converters"
             x:DataType="vm:MyTeamViewModel"
             x:Class="TDFMAUI.Pages.MyTeamPage"
             Title="My Team"
             BackgroundColor="{StaticResource Gray100}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Padding="{OnIdiom Phone='10', Default='20'}">
            <Button Grid.Column="0" 
                    Text="←" 
                    Clicked="OnBackClicked"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"
                    FontSize="{OnIdiom Phone=16, Default=20}"
                    WidthRequest="{OnIdiom Phone=40, Default=50}"/>
            <Label Grid.Column="1"
                   Text="My Team"
                   FontSize="{OnIdiom Phone=20, Default=24}"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
            <Button Grid.Column="2"
                    Text="↻"
                    Command="{Binding LoadTeamCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"
                    FontSize="{OnIdiom Phone=16, Default=20}"
                    WidthRequest="{OnIdiom Phone=40, Default=50}"/>
        </Grid>

        <!-- Team Members List -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsLoading}"
                     Command="{Binding LoadTeamCommand}">
            <ScrollView>
                <VerticalStackLayout>
                    <!-- Constrain width on Desktop/Tablet -->
                    <VerticalStackLayout.MaximumWidthRequest>
                        <OnIdiom x:TypeArguments="x:Double" Phone="10000" Tablet="800" Desktop="700" />
                    </VerticalStackLayout.MaximumWidthRequest>
                    <VerticalStackLayout.HorizontalOptions>
                         <OnIdiom Default="Fill" Phone="Fill" Tablet="Center" Desktop="Center" />
                    </VerticalStackLayout.HorizontalOptions>

                    <CollectionView x:Name="TeamMembersCollectionView"
                                    ItemsSource="{Binding TeamMembers}"
                                   SelectionMode="None"
                                   EmptyView="No team members to display">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="dtos:UserDto">
                                <Frame BackgroundColor="White"
                                       Padding="{OnIdiom Phone='5,3', Default='10,5'}"
                                       CornerRadius="10">
                                    <Grid>
                                        <!-- Desktop/Tablet View -->
                                        <Grid ColumnDefinitions="Auto,*,Auto"
                                              RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                                              IsVisible="{x:Static helpers:DeviceHelper.IsLargeScreen}">
                                            <!-- Profile Picture - using byte array converter -->
                                            <Image Grid.Row="0" Grid.Column="0"
                                                   Grid.RowSpan="6"
                                                   Source="{Binding ProfilePictureData, Converter={StaticResource ByteArrayToImageSourceConverter}}"
                                                   WidthRequest="60"
                                                   HeightRequest="60"
                                                   Aspect="AspectFill"/>

                                            <!-- Name -->
                                            <Label Grid.Row="0" Grid.Column="1"
                                                   Text="{Binding FullName}"
                                                   FontAttributes="Bold"
                                                   FontSize="16"
                                                   Margin="10,0,0,0"/>

                                            <!-- Annual Leave -->
                                            <Label Grid.Row="1" Grid.Column="1"
                                                   Text="Annual Leave:"
                                                   FontSize="14"
                                                   Margin="10,5,0,0"/>
                                            <Label Grid.Row="1" Grid.Column="2"
                                                   Text="{Binding AnnualLeaveBalance, StringFormat='{0} days'}"
                                                   FontSize="14"
                                                   Margin="0,5,0,0"/>

                                            <!-- Casual Leave -->
                                            <Label Grid.Row="2" Grid.Column="1"
                                                   Text="Casual Leave:"
                                                   FontSize="14"
                                                   Margin="10,5,0,0"/>
                                            <Label Grid.Row="2" Grid.Column="2"
                                                   Text="{Binding CasualLeaveBalance, StringFormat='{0} days'}"
                                                   FontSize="14"
                                                   Margin="0,5,0,0"/>

                                            <!-- Permissions -->
                                            <Label Grid.Row="3" Grid.Column="1"
                                                   Text="Permissions:"
                                                   FontSize="14"
                                                   Margin="10,5,0,0"/>
                                            <Label Grid.Row="3" Grid.Column="2"
                                                   Text="{Binding PermissionsBalance, StringFormat='{0} days'}"
                                                   FontSize="14"
                                                   Margin="0,5,0,0"/>

                                            <!-- Unpaid Leave -->
                                            <Label Grid.Row="4" Grid.Column="1"
                                                   Text="Unpaid Leave:"
                                                   FontSize="14"
                                                   Margin="10,5,0,0"/>
                                            <Label Grid.Row="4" Grid.Column="2"
                                                   Text="{Binding UnpaidLeaveUsed, StringFormat='{0} days'}"
                                                   FontSize="14"
                                                   Margin="0,5,0,0"/>

                                            <!-- Department -->
                                            <Label Grid.Row="5" Grid.Column="1"
                                                   Text="{Binding Department}"
                                                   FontSize="12"
                                                   TextColor="Gray"
                                                   Margin="10,5,0,0"/>
                                        </Grid>
                                        
                                        <!-- Mobile/Compact View -->
                                        <Grid ColumnDefinitions="Auto,*"
                                              RowDefinitions="Auto,Auto"
                                              IsVisible="{x:Static helpers:DeviceHelper.UseCompactUI}">
                                            <!-- Profile Picture - using byte array converter -->
                                            <Image Grid.Row="0" Grid.Column="0"
                                                   Grid.RowSpan="2"
                                                   Source="{Binding ProfilePictureData, Converter={StaticResource ByteArrayToImageSourceConverter}}"
                                                   WidthRequest="50"
                                                   HeightRequest="50"
                                                   Aspect="AspectFill"
                                                   Margin="0,0,10,0"/>

                                            <!-- Name and Department -->
                                            <VerticalStackLayout Grid.Row="0" Grid.Column="1">
                                                <Label Text="{Binding FullName}"
                                                       FontAttributes="Bold"
                                                       FontSize="16"/>
                                                <Label Text="{Binding Department}"
                                                       FontSize="12"
                                                       TextColor="Gray"/>
                                            </VerticalStackLayout>
                                            
                                            <!-- Leave Summary -->
                                            <HorizontalStackLayout Grid.Row="1" Grid.Column="1" Spacing="10">
                                                <Label Text="{Binding AnnualLeaveBalance, StringFormat='Annual: {0}'}"
                                                       FontSize="12"/>
                                                <Label Text="{Binding CasualLeaveBalance, StringFormat='Casual: {0}'}"
                                                       FontSize="12"/>
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>

        <!-- Loading Indicator (Redundant with RefreshView, but keeping for compatibility) -->
        <ActivityIndicator Grid.Row="1"
                          IsVisible="{Binding IsLoading}"
                          IsRunning="{Binding IsLoading}"
                          Color="{StaticResource Primary}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>
    </Grid>
</ContentPage>