<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:TDFMAUI.Helpers"
             x:Class="TDFMAUI.Features.Settings.ThemeSettingsPage"
             Title="Theme Settings"
             BackgroundColor="{Binding Source={x:Static helpers:ThemeHelper.CurrentTheme}, Converter={StaticResource ThemeToBackgroundColorConverter}}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="Desktop Layout" IsVisible="{x:Static helpers:DeviceHelper.IsDesktop}"/>
            <Label Text="Mobile Layout" IsVisible="{x:Static helpers:DeviceHelper.IsMobile}"/>
            <Label Text="Appearance" FontSize="24" FontAttributes="Bold" />
            
            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Theme" FontSize="18" FontAttributes="Bold" />
                    
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" RowSpacing="15">
                        <!-- System Default -->
                        <Label Grid.Row="0" Grid.Column="0" 
                               Text="Use System Setting" 
                               VerticalOptions="Center" />
                        <RadioButton x:Name="systemRadioButton" 
                                    Grid.Row="0" Grid.Column="1" 
                                    IsChecked="{Binding FollowSystemTheme}"
                                    GroupName="ThemeGroup"
                                    CheckedChanged="OnThemeRadioButtonCheckedChanged" />
                        
                        <!-- Light Mode -->
                        <Label Grid.Row="1" Grid.Column="0" 
                               Text="Light" 
                               VerticalOptions="Center" />
                        <RadioButton x:Name="lightRadioButton"
                                    Grid.Row="1" Grid.Column="1" 
                                    IsChecked="{Binding IsLightTheme}"
                                    GroupName="ThemeGroup"
                                    CheckedChanged="OnThemeRadioButtonCheckedChanged" />
                        
                        <!-- Dark Mode -->
                        <Label Grid.Row="2" Grid.Column="0" 
                               Text="Dark" 
                               VerticalOptions="Center" />
                        <RadioButton x:Name="darkRadioButton"
                                    Grid.Row="2" Grid.Column="1" 
                                    IsChecked="{Binding IsDarkTheme}"
                                    GroupName="ThemeGroup"
                                    CheckedChanged="OnThemeRadioButtonCheckedChanged" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>
            
            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Current Theme Information" FontSize="18" FontAttributes="Bold" />
                    
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="10" ColumnSpacing="15">
                        <Label Grid.Row="0" Grid.Column="0" Text="Current Theme:" FontAttributes="Bold" />
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding CurrentThemeText}" />
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="System Theme:" FontAttributes="Bold" />
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding SystemThemeText}" />
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="Following System:" FontAttributes="Bold" />
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding FollowingSystemText}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>
            
            <Button Text="Toggle Theme" 
                    Command="{Binding ToggleThemeCommand}"
                    HorizontalOptions="Center"
                    Margin="0,20,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>