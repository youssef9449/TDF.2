<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDFMAUI.Pages.MainPage"
             Title="Dashboard"
             BackgroundColor="#1a237e">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,20">
            <VerticalStackLayout>
                <Label Text="Welcome," 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="White"/>
                <Label x:Name="userNameLabel" 
                       Text="User" 
                       FontSize="18" 
                       TextColor="#bbdefb"/>
            </VerticalStackLayout>
            <Button Grid.Column="1" 
                    Text="Logout" 
                    Clicked="OnLogoutClicked" 
                    BackgroundColor="#64b5f6" 
                    TextColor="White" 
                    HeightRequest="40" 
                    CornerRadius="20"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*" RowDefinitions="*,*" ColumnSpacing="20" RowSpacing="20">
            <!-- Cards -->
            <Frame Grid.Row="0" Grid.Column="0" 
                   BackgroundColor="#0d47a1"
                   CornerRadius="15"
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Leave Requests" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="White"/>
                    <Label Text="Submit and track your leave requests" 
                           FontSize="14" 
                           TextColor="#bbdefb"/>
                    <Button Text="Manage Requests" 
                            Clicked="OnLeaveRequestClicked" 
                            BackgroundColor="#64b5f6" 
                            TextColor="White" 
                            HeightRequest="50" 
                            CornerRadius="25"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Repeat similar styling for other cards -->
        </Grid>

        <!-- Footer -->
        <Label Grid.Row="2" 
               Text="Â© 2025 TDF Application" 
               FontSize="12" 
               TextColor="#bbdefb" 
               HorizontalOptions="Center" 
               Margin="0,20,0,0"/>
    </Grid>
</ContentPage>