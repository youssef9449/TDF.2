<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDFMAUI.Pages.UserDetailsPage"
             Title="User Details"
             BackgroundColor="{StaticResource Gray100}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
             <!-- Constrain width on Desktop/Tablet -->
            <VerticalStackLayout.MaximumWidthRequest>
                <OnIdiom x:TypeArguments="x:Double" Phone="10000" Tablet="700" Desktop="600" />
            </VerticalStackLayout.MaximumWidthRequest>
            <VerticalStackLayout.HorizontalOptions>
                 <OnIdiom Default="Fill" Phone="Fill" Tablet="Center" Desktop="Center" />
            </VerticalStackLayout.HorizontalOptions>

            <!-- Header -->
            <Grid ColumnDefinitions="Auto,*,Auto">
                <Button Grid.Column="0" 
                        Text="← Back" 
                        Clicked="OnBackClicked"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Primary}"
                        FontAttributes="Bold"/>
                <Label Grid.Column="1" 
                       Text="User Details" 
                       FontSize="24"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Grid>

            <!-- User Info -->
            <Frame Padding="20" 
                   BorderColor="{StaticResource Gray300}"
                   BackgroundColor="White"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Username:" 
                           FontAttributes="Bold"/>
                    <Label x:Name="userNameLabel"/>

                    <Label Text="Full Name:" 
                           FontAttributes="Bold"/>
                    <Label x:Name="fullNameLabel"/>

                    <Label Text="Department:" 
                           FontAttributes="Bold"/>
                    <Label x:Name="departmentLabel"/>

                    <Label Text="Title:" 
                           FontAttributes="Bold"/>
                    <Label x:Name="titleLabel"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 