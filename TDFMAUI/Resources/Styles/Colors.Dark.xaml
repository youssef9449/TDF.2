<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!-- Primary Colors (same as light) -->
    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="PrimaryDark">#3E22A3</Color>
    <Color x:Key="PrimaryLight">#6A44E3</Color>
    <Color x:Key="PrimaryLighter">#8F6EEC</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>
    <!-- Dark Theme Colors -->
    <Color x:Key="DarkBackground">#121212</Color>
    <Color x:Key="DarkSurface">#1E1E1E</Color>
    <Color x:Key="DarkSurfaceVariant">#252525</Color>
    <Color x:Key="DarkSurfaceElevated">#2D2D2D</Color>
    <Color x:Key="DarkBorder">#393939</Color>
    <Color x:Key="DarkText">#E0E0E0</Color>
    <Color x:Key="DarkTextSecondary">#B0B0B0</Color>
    <Color x:Key="DarkTextTertiary">#909090</Color>
    <!-- Dashboard Colors - Dark Theme -->
    <Color x:Key="DarkYellow100">#423C00</Color>
    <Color x:Key="DarkBlue100">#0A3450</Color>
    <Color x:Key="DarkGreen100">#0E3B1C</Color>
    <!-- Semantic Colors for Dark Theme -->
    <Color x:Key="BackgroundColor">#121212</Color>
    <Color x:Key="SurfaceColor">#1E1E1E</Color>
    <Color x:Key="SurfaceVariantColor">#252525</Color>
    <Color x:Key="SurfaceElevatedColor">#2D2D2D</Color>
    <Color x:Key="BorderColor">#393939</Color>
    <Color x:Key="TextColor">#E0E0E0</Color>
    <Color x:Key="TextSecondaryColor">#B0B0B0</Color>
    <Color x:Key="TextTertiaryColor">#909090</Color>
    <Color x:Key="YellowCardColor">#423C00</Color>
    <Color x:Key="BlueCardColor">#0A3450</Color>
    <Color x:Key="GreenCardColor">#0E3B1C</Color>
</ResourceDictionary>
