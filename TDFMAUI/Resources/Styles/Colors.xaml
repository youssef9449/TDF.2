<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <!-- Primary Colors (same for both themes) -->
    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="PrimaryDark">#3E22A3</Color>
    <Color x:Key="PrimaryLight">#6A44E3</Color>
    <Color x:Key="PrimaryLighter">#8F6EEC</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>
    
    <!-- Theme-aware colors using AppThemeBinding -->
    <SolidColorBrush x:Key="BackgroundColor" Color="{AppThemeBinding Light=#FFFFFF, Dark=#121212}" />
    <SolidColorBrush x:Key="SurfaceColor" Color="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}" />
    <SolidColorBrush x:Key="SurfaceVariantColor" Color="{AppThemeBinding Light=#F1F1F1, Dark=#252525}" />
    <SolidColorBrush x:Key="SurfaceElevatedColor" Color="{AppThemeBinding Light=#FFFFFF, Dark=#2D2D2D}" />
    <SolidColorBrush x:Key="BorderColor" Color="{AppThemeBinding Light=#CDCDCD, Dark=#393939}" />
    
    <!-- Text Colors - Fixed for proper contrast -->
    <SolidColorBrush x:Key="TextColor" Color="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
    <SolidColorBrush x:Key="TextSecondaryColor" Color="{AppThemeBinding Light=#696969, Dark=#B0B0B0}" />
    <SolidColorBrush x:Key="TextTertiaryColor" Color="{AppThemeBinding Light=#9B9B9B, Dark=#909090}" />
    
    <!-- Card Colors -->
    <SolidColorBrush x:Key="CardColor" Color="{AppThemeBinding Light=#FFFFFF, Dark=#2D2D2D}" />
    <SolidColorBrush x:Key="DividerColor" Color="{AppThemeBinding Light=#E0E0E0, Dark=#333333}" />
    
    <!-- Dashboard Colors -->
    <SolidColorBrush x:Key="YellowCardColor" Color="{AppThemeBinding Light=#FFF8E1, Dark=#423C00}" />
    <SolidColorBrush x:Key="BlueCardColor" Color="{AppThemeBinding Light=#E3F2FD, Dark=#0A3450}" />
    <SolidColorBrush x:Key="GreenCardColor" Color="{AppThemeBinding Light=#E8F5E9, Dark=#0E3B1C}" />
    
    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="WarningColor">#FF9800</Color>
    <Color x:Key="ErrorColor">#F44336</Color>
    <SolidColorBrush x:Key="ErrorLightColor" Color="{AppThemeBinding Light=#FFEBEE, Dark=#4A1C1C}" />
    <Color x:Key="InfoColor">#2196F3</Color>
    
    <!-- Additional Colors -->
    <Color x:Key="OnPrimaryColor">#FFFFFF</Color>
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    
    <!-- Gray Colors for compatibility -->
    <SolidColorBrush x:Key="Gray100" Color="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}" />
    <SolidColorBrush x:Key="Gray200" Color="{AppThemeBinding Light=#EEEEEE, Dark=#3A3A3A}" />
    <SolidColorBrush x:Key="Gray300" Color="{AppThemeBinding Light=#E0E0E0, Dark=#484848}" />
    <SolidColorBrush x:Key="Gray400" Color="{AppThemeBinding Light=#BDBDBD, Dark=#6D6D6D}" />
    <SolidColorBrush x:Key="Gray500" Color="{AppThemeBinding Light=#9E9E9E, Dark=#8A8A8A}" />
    <SolidColorBrush x:Key="Gray600" Color="{AppThemeBinding Light=#757575, Dark=#A0A0A0}" />
    <SolidColorBrush x:Key="Gray700" Color="{AppThemeBinding Light=#616161, Dark=#B8B8B8}" />
    <SolidColorBrush x:Key="Gray800" Color="{AppThemeBinding Light=#424242, Dark=#D0D0D0}" />
    <SolidColorBrush x:Key="Gray900" Color="{AppThemeBinding Light=#212121, Dark=#E8E8E8}" />
    
    <!-- Shadow and Elevation -->
    <SolidColorBrush x:Key="ShadowColor" Color="{AppThemeBinding Light=#20000000, Dark=#40000000}" />
    <SolidColorBrush x:Key="ElevationColor" Color="{AppThemeBinding Light=#FFFFFF, Dark=#2D2D2D}" />
    
</ResourceDictionary>